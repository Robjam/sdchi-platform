{
  "name": "@repo/sdchi-auth",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "pnpm": "9.0.0"
  },
  "scripts": {
    "build": "nitro build",
    "build:css": "tailwindcss -i ./style.css -o ./server/public/style.css",
    "dev": "nitro dev --https",
    "dev:css": "tailwindcss -i ./style.css -o ./server/public/style.css --watch",
    "preview": "node .output/server/index.mjs",
    "postinstall": "nitro prepare",
    "test": "vitest run",
    "test:watch": "vitest",
    "check-types": "tsc --noEmit",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:generate": "pnpm drizzle-kit generate",
    "db:push": "pnpm drizzle-kit push",
    "migrate": "wrangler d1 migrations apply dev-sdchi-auth-db --local --env=preview",
    "seed:manual": "tsx ./seeds/index.ts"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.7",
    "@tailwindcss/postcss": "^4.1.7",
    "drizzle-kit": "^0.31.0",
    "drizzle-seed": "^0.3.1",
    "nitropack": "^2.12.4",
    "postcss": "^8.5.3",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.3.0",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250515.0",
    "@types/jsonwebtoken": "^9.0.9",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "hono": "4.7.9",
    "jsonwebtoken": "^9.0.2",
    "nitro-cloudflare-dev": "^0.2.2",
    "oauth4webapi": "^3.5.1",
    "tsx": "^4.0.0",
    "uuid": "^10.0.0",
    "wrangler": "^4.15.1",
    "zod": "^3.24.4"
  }
}